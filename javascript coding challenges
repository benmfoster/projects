<script>function reverseString(str) {
  let i = str.length - 1;
  let reverse_str = [];
  let str_array = str.split();
  while (i >= 0) {
    reverse_str.push(str_array.shift);
    i --;
  }
  return reverse_str.join();
}

reverseString("hello");
